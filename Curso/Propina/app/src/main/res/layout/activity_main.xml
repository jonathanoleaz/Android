<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="388dp"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="3"
        tools:showIn="@layout/activity_main">


        <Button
            android:id="@+id/buttonOpcion1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:text="@string/opcion1" />

        <Button
            android:id="@+id/buttonOpcion2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:text="@string/opcion2" />

        <Button
            android:id="@+id/buttonOpcion3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="@string/opcion3" />

        <Button
            android:id="@+id/buttonOpcion4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"

            android:text="@string/opcion4"/>

        <Button
            android:id="@+id/buttonOpcion5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="Button" />

        <Button
            android:id="@+id/buttonOpcion6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"

            android:text="Button" />
    </GridLayout>


</android.support.constraint.ConstraintLayout>