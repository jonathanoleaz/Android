            android:layout_weight="1" />

        <fragment
            android:id="@+id/fragmentLeft"
            android:name="com.example.jonat.repeatejemplofragmentos.RightFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>