    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/fragmentRight"
            android:name="com.example.jonat.repeatejemplofragmentos.LeftFragment"
